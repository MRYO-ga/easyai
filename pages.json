      }
    },
    {
      "path": "pages/gen/index",
      "style": {
        // "navigationBarBackgroundColor": "#C12928",
        "disableScroll": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/index/faceswap/index",
      "style": {
        // "navigationBarBackgroundColor": "#C12928",
        "disableScroll": false,
        "navigationStyle": "custom"
      }
    },
    {

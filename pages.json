  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "AI写真",
    "navigationBarBackgroundColor": "#FFF",
    "scrollIndicator": "none", // 不显示滚动条
    "app-plus": {
      "scrollIndicator": "none" // 在APP平台都不显示滚动条
    }
    // "backgroundColor": "#C12928"
  },
  "tabBar": {
    "selectedColor": "#ee499b",
    // "selectedColor": "#1aabcf",
    "borderStyle": "black",
